{# red #}
{% if app.session.flashbag.has('error') %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <script>
            document.addEventListener("DOMContentLoaded", function(event) {
                new PNotify({
                    title: '{{ 'Error'|trans }}!',
                    text: '{{ flashMessage|raw }}',
                    type: 'error'
                });
            });
        </script>
    {% endfor %}
{% endif %}

