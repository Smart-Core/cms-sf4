{# red #}
{% if app.session.flashbag.has('error') %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="flash-message flash-message-error alert alert-error alert-danger"><button type="button" class="close" data-dismiss="alert">&times;</button>{{ flashMessage|raw }}</div>
    {% endfor %}
{% endif %}

