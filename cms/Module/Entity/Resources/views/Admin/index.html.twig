{% extends '@CMS/Admin/module.html.twig' %}

{% block title %}{{ 'Entities'|trans }} / {{ parent() }}{% endblock %}

{% block page_header 'Entities'|trans %}
{% block page_description 'Module'|trans %}

{% block content %}

<div class="box box-body">
    <div class="box-header with-border">

        <div class="row">
            <div class="col-md-12">
{#                <h3>{{ 'All'|trans }} {{ 'Entities'|trans }}</h3>#}

                <table class="table table-bordered table-hover">
                    <thead><tr>
                        <th style="width: 1%;">{{ 'Name'|trans }}</th>
                        <th>{{ 'Class'|trans }}</th>
                    </tr></thead>
                    <tbody>

                    {% for e in entities %}
                        <tr>
                            <td><a href="{{ path('monolith_module.entity.admin.list', {'entity': e.name}) }}">{{ e.name }}</a></td>
                            <td>{{ e.class }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

{% endblock content %}
